{
  "name": "discord-bot",
  "version": "1.0.0",
  "description": "A Discord.js bot boilerplate",
  "main": "dist/bot.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/bot.js",
    "dev": "ts-node src/bot.ts",
    "watch": "nodemon --exec ts-node src/bot.ts",
    "deploy": "ts-node src/deploy-commands.ts"
  },
  "keywords": [
    "discord",
    "bot",
    "discord.js"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "discord.js": "^14.14.1",
    "dotenv": "^16.4.1"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "nodemon": "^3.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
